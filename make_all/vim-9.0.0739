#!/bin/bash

cd $LFS/sources/vim-9.0.0739 

./configure --prefix=/usr

make -j3

### testing
#chown -Rv tester .
#su tester -c "LANG=en_US.UTF-8 make -j1 test" &> vim-test.log

make install

ln -sv vim /usr/bin/vi
for L in  /usr/share/man/{,*/}man1/vim.1; do
    ln -sv vim.1 $(dirname $L)/vi.1
done

ln -sv ../vim/vim90/doc /usr/share/doc/vim-9.0.0739

### configure vim
cat > /etc/vimrc << "EOF"
" Begin /etc/vimrc

" Ensure defaults are set before customizing settings, not after
source $VIMRUNTIME/defaults.vim
let skip_defaults_vim=1

set nocompatible
set backspace=2
set mouse=
syntax on
if (&term == "xterm") || (&term == "putty")
  set background=dark
endif

" End /etc/vimrc
EOF

vim -c ':options'

### change language if u want to
#set spelllang=en,ru
#set spell


if [ vi ] 
then
echo "vim is installed" >> ../make_all/install.log
else
echo "vim not install" >> ../make_all/install.log
fi
