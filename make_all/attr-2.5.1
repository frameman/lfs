#!/bin/bash
cd $LSF/sources/attr-2.5.1 

./configure --prefix=/usr     \
            --disable-static  \
            --sysconfdir=/etc \
            --docdir=/usr/share/doc/attr-2.5.1

make -j3

#make check

make install

if [ /usr/include/attr ] 
then
echo "attr is installed" >> ../make_all/install/log
else
echo "attr not install" >> ../make_all/install/log
fi

