#!/bin/bash

cd $LFS/sources/inetutils-2.4

./configure --prefix=/usr        \
            --bindir=/usr/bin    \
            --localstatedir=/var \
            --disable-logger     \
            --disable-whois      \
            --disable-rcp        \
            --disable-rexec      \
            --disable-rlogin     \
            --disable-rsh        \
            --disable-servers

make -j3
#make check
make install
mv -v /usr/{,s}bin/ifconfig
if [ ftp ]
then 
echo "inetutils is installed" >> ../make_all/install.log
else
echo "inetutils not install" >> ../make_all/install.log
fi

