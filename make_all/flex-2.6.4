#!/bin/bash
cd $LFS/sources/flex-2.6.4 

./configure --prefix=/usr \
            --docdir=/usr/share/doc/flex-2.6.4 \
            --disable-static

make -j3
#make check
make install

if [ /usr/share/doc/flex-2.6.4 ] 
then
echo "flex is installed" >> ../make_all/install.log
else
echo "flex not install" >> ../make_all/install.log
fi
