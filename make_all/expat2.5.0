#!/bin/bash

cd $LFS/sources/expat-2.5.0 

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/expat-2.5.0

make -j3

#make check

make install

install -v -m644 doc/*.{html,css} /usr/share/doc/expat-2.5.0

if [ xmlwf ]
then 
echo "expat is installed" >> ../make_all/install.log
else
echo "expat is installed" >> ../make_all/install.log
fi

