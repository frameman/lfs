#!/bin/bash
LFS=/mnt/lfs

mkdir -v $LFS/sources
chmod -v a+wt $LFS/sources
cd $LFS/sources
wget https://download.savannah.gnu.org/releases/acl/acl-2.3.1.tar.xz    ## acl 2.3.1
