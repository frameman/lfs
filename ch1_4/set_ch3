wget https://github.com/shadow-maint/shadow/releases/download/4.13/shadow-4.13.tar.xz                 ## shadow-4.13
wget https://github.com/systemd/systemd/archive/v252/systemd-252.tar.gz                               ## systemd-252 
wget https://ftp.gnu.org/gnu/tar/tar-1.34.tar.xz                                                      ## tar-1.34
wget https://downloads.sourceforge.net/tcl/tcl8.6.13-src.tar.gz                                       ## tcl8.6.13
wget https://ftp.gnu.org/gnu/texinfo/texinfo-7.0.1.tar.xz                                             ## texinfo-7.0.1
wget https://www.kernel.org/pub/linux/utils/util-linux/v2.38/util-linux-2.38.1.tar.xz                 ## util-linux-2.38.1
wget https://anduin.linuxfromscratch.org/LFS/vim-9.0.0739.tar.gz                                      ## vim-9.0.0739
wget https://pypi.org/packages/source/w/wheel/wheel-0.38.4.tar.gz                                     ## wheel-0.38.4
wget https://cpan.metacpan.org/authors/id/T/TO/TODDR/XML-Parser-2.46.tar.gz                           ## XML-Parser-2.46
wget https://tukaani.org/xz/xz-5.2.9.tar.xz                                                           ## xz-5.2.9
wget https://zlib.net/zlib-1.2.13.tar.xz                                                              ## zlib-1.2.13
wget https://github.com/facebook/zstd/releases/download/v1.5.2/zstd-1.5.2.tar.gz                      ## zstd-1.5.2
wget https://www.linuxfromscratch.org/patches/lfs/development/bzip2-1.0.8-install_docs-1.patch        ## bzip2-1.0.8-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/coreutils-9.1-i18n-1.patch              ## coreutils-9.1-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/glibc-2.36-fhs-1.patch                  ## glibc-2.36-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/kbd-2.5.1-backspace-1.patch             ## kbd-2.5.1-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/readline-8.2-upstream_fix-1.patch       ## readline-8.2-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/zstd-1.5.2-upstream_fixes-1.patch       ## zstd-1.5.2-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/glibc-2.36-fhs-1.patch                  ## glibc-2.36-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/kbd-2.5.1-backspace-1.patch             ## kbd-2.5.1-patch
wget https://www.linuxfromscratch.org/patches/lfs/development/readline-8.2-upstream_fix-1.patch       ## readline-8.2-patch

for i in *.tar.gz ; do tar -xvf $i ; done
for a in *.tar.xz ; do tar -xvf $a ; done
for j in *.tar.bz2; do tar -xvf $j ; done
chown root:root $LFS/sources/*
