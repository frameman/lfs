wget https://ftp.gnu.org/gnu/mpc/mpc-1.2.1.tar.gz                                                     ## mpc-1.2.1
wget https://ftp.gnu.org/gnu/mpfr/mpfr-4.1.1.tar.xz                                                   ## mpfr-4.1.1
wget https://invisible-mirror.net/archives/ncurses/ncurses-6.3.tar.gz                                 ## ncurses-6.3
