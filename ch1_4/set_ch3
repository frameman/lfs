wget https://ftp.gnu.org/gnu/gdbm/gdbm-1.23.tar.gz                                                    ## gdbm 1.23
wget https://ftp.gnu.org/gnu/gettext/gettext-0.21.1.tar.xz                                            ## gettext 0.21.1
wget https://ftp.gnu.org/gnu/glibc/glibc-2.36.tar.xz                                                  ## glibc 2.36
